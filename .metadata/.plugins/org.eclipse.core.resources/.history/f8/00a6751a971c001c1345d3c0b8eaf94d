package assignment1;


import static java.lang.System.*;
import java.util.ArrayList;
import java.util.Scanner;
public class Act4 
	{

		public static void main(String[] args) 
		{
			ArrayList obj=new ArrayList();
			Scanner sc=new Scanner(System.in);
			out.println("Enter number of integers you want to store");
			int n=sc.nextInt();
			
			for(int i=0;i<n;i++) {
			int a =sc.nextInt();
            obj.add(a);
			}
            out.println("ArrayList: "+obj);
            out.println("Enter number to find its index ");
            int b=sc.nextInt();
            out.println("Index of " +b+ " is " + obj.indexOf(b));
		}
		
	}